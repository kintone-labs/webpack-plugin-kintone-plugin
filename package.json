    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1",
    "standard-version": "^4.3.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.8.1",
    "webpack": "^4.4.1",
    "webpack-cli": "^2.0.13"
