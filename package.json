{
  "name": "@kintone/webpack-plugin-kintone-plugin",
  "version": "0.3.4",
  "description": "A webpack plugin to generate a plugin zip",
  "main": "dist/src/index.js",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "start": "tsc -w",
    "build": "tsc",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "release": "run-s build lint test standard-version",
    "standard-version": "standard-version",
    "unittest": "mocha --require ts-node/register --watch-extensions ts test/**/*-test.ts",
    "test": "run-s build unittest"
  },
  "keywords": [
    "webpack",
    "kintone"
  ],
  "files": [
    "dist/src"
  ],
  "author": "kintone",
  "license": "MIT",
  "devDependencies": {
    "@types/adm-zip": "^0.4.31",
    "@types/chokidar": "^1.7.5",
    "@types/lodash": "^4.14.108",
    "@types/mocha": "^5.2.0",
    "@types/node": "^9.6.12",
    "@types/webpack": "^4.1.4",
    "adm-zip": "^0.4.9",
    "mocha": "^5.1.1",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.12.1",
    "standard-version": "^4.3.0",
    "ts-node": "^6.0.2",
    "tslint": "^5.10.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.8.3",
    "webpack": "^4.7.0",
    "webpack-cli": "^2.1.2"
  },
  "peerDependencies": {
    "webpack": "^4.7.0"
  },
  "dependencies": {
    "@teppeis/kintone-plugin-packer": "^0.10.1",
    "chokidar": "^2.0.3",
    "lodash": "^4.17.10"
  }
}
